<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jwb.gamehelper.module.main.ui.MainActivity">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_alignParentBottom="true">
        <com.jwb.gamehelper.common.widget.BottomMenu
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onChoose"
            app:normalPic="@mipmap/icon_home"
            app:pressedPic="@mipmap/icon_home_hover"
            app:text="首页"/>
        <com.jwb.gamehelper.common.widget.BottomMenu
            android:id="@+id/menu_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onChoose"
            app:normalPic="@mipmap/ic_menu_03_nor"
            app:pressedPic="@mipmap/ic_menu_03_hl"
            app:text="赚钱"/>
        <com.jwb.gamehelper.common.widget.BottomMenu
            android:id="@+id/menu_guess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onChoose"
            app:normalPic="@mipmap/ic_menu_01_nor"
            app:pressedPic="@mipmap/ic_menu_01_hl"
            app:text="竞猜"/>
        <com.jwb.gamehelper.common.widget.BottomMenu
            android:id="@+id/menu_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onChoose"
            app:normalPic="@mipmap/ic_menu_04_nor"
            app:pressedPic="@mipmap/ic_menu_04_hl"
            app:text="商城"/>
        <com.jwb.gamehelper.common.widget.BottomMenu
            android:id="@+id/menu_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onChoose"
            app:normalPic="@mipmap/ic_menu_05_nor"
            app:pressedPic="@mipmap/ic_menu_05_hl"
            app:text="我的"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bottom_menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eccc"
        android:layout_above="@id/menu_layout"
        />
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_menu_line">
    </FrameLayout>

</RelativeLayout>
