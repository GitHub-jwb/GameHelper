<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="90dp"
              android:descendantFocusability="blocksDescendants"
    android:padding="5dp">
    <ImageView
        android:id="@+id/game_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/game_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏任务"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>
        <RatingBar
            android:id="@+id/game_item_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:max="10"
            android:stepSize="0.5"
            android:rating="2.5"
            android:progressDrawable="@drawable/layer_list_star"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_item_dlcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"/>
            <TextView
                android:id="@+id/game_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="暂无数据"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/sel_game_dl_btn_bg"/>
        <TextView
            android:id="@+id/game_item_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:layout_marginTop="5dp"
            android:textColor="#0080FF"/>
    </LinearLayout>
</LinearLayout>